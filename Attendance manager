void brain();
int main()
{
    Beep(400, 900);
    printf("----------------------------------------------------------------------------------------------------------------\n");
    printf("\n");
    printf("\n");
    printf("\n");
    alphabet();

    // BRAINN Of protgram :)
    brain();

    return 0;
}
void brain()
{

    typedef float k;
    typedef char ch;
    typedef int kj;
    ch pr = '%', ap, lable;
    k total_attn, overall_attan, attan_percentage, required_attn = 0;
    printf("Enter the total number of classes of your subject :");
    scanf("%f", &total_attn);
    printf("Enter the total number of classes you attened : ");
    scanf("%f", &overall_attan);
    required_attn = (total_attn * 75) / 100; // us Attendance ka 70 per aajai ga
    if (total_attn >= overall_attan)
    {

        while (overall_attan <= total_attn)
        {
            attan_percentage = (overall_attan / total_attn) * 100; // 20/200*100
            printf("\npercentage criteria  is :- 75 %c", pr);      // 75
            // if (total_attn>=)
            // {
            //     /* code */
            // }

            printf("\n compulsory to attended classes  :- %.2f ", required_attn);                          // 150 classs
            printf("\nYour attendance in percentage is :- %.2f %c ", attan_percentage, pr);                // 10%
            printf("\nYou need more %.0f classes to cross 75 %c :)  ", required_attn - overall_attan, pr); // 150-20

            printf("\nPRESS enter....! to cleat screen :) ");
            Beep(600, 350);
            getch();

            system("cls");
            printf("\nEnter.....! \n p = present \t a = absent ");

            // kj resuslt;
            scanf("\n%c", &ap);
            switch (ap)
            {

            case 'p':
                overall_attan++;
                Beep(900, 550);
                break;
            case 'a':
                overall_attan--;
                Beep(1000, 850);
                break;
            default:
                printf("WRONG INPUt....!");
                break;
            }
        }
    }
    else
    {
        Beep(600, 650);
        Beep(600, 650);
        Beep(600, 650);
        printf("Wrong input...... :(");
    }
}
